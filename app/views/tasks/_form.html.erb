<div class="container mt-4">
  <h1 class="text-center mb-4">Add your new task</h1>

  <%= form_with class: "mb-4", model: task do |f| %>
    <div class="mb-3">
      <%= f.check_box :completed %>
      <%= f.label :completed, "Completed" %>
    </div>
    <div class="mb-3">
      <%= f.label :title, class: "form-label" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.label :details, class: "form-label" %>
      <%= f.text_field :details, class: "form-control" %>
    </div>
    <div class="d-grid gap-2">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "Back to list", root_path, class: "btn btn-outline-secondary" %>
</div>
