<div class="container mt-4">
  <h1 class="mb-4">My tasks</h1>

  <ul class="list-group mb-4">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex align-items-center">
        <%= check_box_tag "task_#{task.id}", "1", task.completed, class: "form-check-input me-2" %>
        <%= link_to task.title, task_path(task), class: "text-decoration-none" %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add a new task", new_task_path, class: "btn btn-primary" %>
</div>
